<% include ../base/headerStaff %>
<link href="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.18/c3.css" rel="stylesheet">
    <br>
    <br>
    <canvas id="myChart" width="400" height="400"></canvas>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.bundle.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.js"></script>
    <script>
        var listCorrect = '<%= listCorrect %>'
        var listTaken = '<%= listTaken %>'
        var listTitle = "<%= listTitle %>"
        var newCorrect = []
        var newTaken = []
        var newQuestion = []
        listCorrect = listCorrect.split(',')
        listTaken = listTaken.split(',')
        listTitle = listTitle.split(",")
        for( var i =0;i<listCorrect.length;i++){
            if(listCorrect[i] != ","){
                newCorrect.push(parseInt(listCorrect[i]));
            }
            if(listTaken[i] != ","){
                newTaken.push(parseInt(listTaken[i]));
            }
            if(listTitle[i] != ','){
                newQuestion.push(listTitle[i])
            }
        }
        var percentage = []
        
        for(var i=0;i<newCorrect.length;i++){
            if( newTaken[i] == 0){
                percentage.push(0)
            }else{
                var percent = (newCorrect[i] / newTaken[i] ) * 100;
                percentage.push(percent )
            }
        }
        var ctx = document.getElementById("myChart").getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: newQuestion,
                datasets: [{
                    label: 'Percentage of choosing the right answer',
                    data: percentage,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero:true
                        }
                    }]
                }
            }
        });

    </script>
