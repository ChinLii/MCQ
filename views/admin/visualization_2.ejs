<% include ../base/headerStaff %>
<link href="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.18/c3.css" rel="stylesheet">
    <br>
    <br>
    <canvas id="myChart" width="2000" height="1000"></canvas>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.bundle.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.js"></script>
    <script>
        var listTopics = '<%= listTopics %>'
        var topicPercentage = '<%= topicPercentage %>'
        var convertListTopics = listTopics.split(",")
        var convertTopicpercentage = topicPercentage.split(",")
        for(let i =0;i<convertTopicpercentage.length;i++){
            convertTopicpercentage[i] = parseFloat(convertTopicpercentage[i])
        }

        var ctx = document.getElementById("myChart").getContext('2d');
        data = {
            label : 'Percentage of participant choose the right answer per each topic %' ,
            data : convertTopicpercentage,
            backgroundColor: ['#F7464A','#4D5360','#949FB1','#D4CCC5','#E2EAE9','#F7464A'],
        };
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels : convertListTopics,
                datasets: [data],
            },
            
        });

    </script>
