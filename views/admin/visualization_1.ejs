<% include ../base/headerStaff %>
<link href="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.18/c3.css" rel="stylesheet">
    <br>
    <br>
    <canvas id="myChart" width="1500" height="700"></canvas>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.bundle.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.js"></script>
    <script>
        var percentageCorrect = '<%= percentageCorrect %>'
        percentageCorrect = parseFloat(percentageCorrect);
        var percentageIncorrect = 100 - percentageCorrect; 
          
        var ctx = document.getElementById("myChart").getContext('2d');
        data = {
            datasets: [{
                data: [percentageCorrect, percentageIncorrect],
                backgroundColor : ["#55FF5C","#FD2843"],
            }],
           
            // These labels appear in the legend and in the tooltips when hovering different arcs
            labels: [
                'Percentage of participants that choose a right answer',
                'Percentage of participants that choose a wrong answer'
            ]
        };
        var myChart = new Chart(ctx, {
            type: 'doughnut',
            data: data,
            options: {
                title: {
                    display: true,
                    text: 'A graph showing the ratio (percentage) of participants that choose a right question.'
                }
            }
        });

    </script>
