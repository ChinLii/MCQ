<% include ./base/headerStaff %> 
    <br>
    <br>
    <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-9">
            <h6>Create Quiz</h6>
        </div>
    </div>
    <br>
    <br>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-1">
            <label>Quiz Title</label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-6">
            <input type="text" class="form-control" id="quizTitle" placeholder="Quiz Title">
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-3">
            <button onclick="createQuiz();" class="btn btn-primary">Submit</button>
            <a href="/admin/quizzes" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    
    <script>
        function createQuiz(){
            var title = document.getElementById("quizTitle").value;
            var data = {
                'title':title,
            }
            if (title === ""){
                alert("Please fill in all information")
            }else{
                $.post("/api/v1/createQuiz",data,function(response){
                    alert(response.message)
                    window.location.replace("/admin/quizzes");
                })
            }
        }
    </script>
